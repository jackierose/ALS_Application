<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="paaj.als_application.MainPage">
    android:background="@drawable/books"

    <!--Above is there code ^^^-->


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="782dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="887dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/books" />

    <Button
        android:id="@+id/mainCircleOne"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/tan_circle"
        android:contentDescription="@string/main_circle_one"
        android:onClick="moveToWrite"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainCircleTwo" />


    <Button
        android:id="@+id/mainCircleTwo"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/powder_circle"
        android:contentDescription="@string/main_circle_two"
        android:onClick="moveToRead"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/mainCircleOne"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SurfaceView
        android:id="@+id/cameraview"
        android:layout_width="141dp"
        android:layout_height="155dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--android:src="@drawable/powder_circle"-->

</android.support.constraint.ConstraintLayout>





<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="paaj.als_application.MainPage" >
    android:background="@drawable/books"

    <!--Above is there code ^^^-->


    <SurfaceView
        android:id="@+id/cameraview"
        android:layout_width="286dp"
        android:layout_height="412dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/mainCircleOne"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/mainCircleTwo"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.503"
        tools:layout_editor_absoluteX="155dp"
        app:layout_constraintHorizontal_bias="0.498" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="642dp"
        android:layout_height="216dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="-22dp"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/books"
        app:layout_constraintTop_toBottomOf="@+id/cameraview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/mainCircleOne"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="97dp"
        android:background="@drawable/tan_circle"
        android:contentDescription="@string/main_circle_one"
        android:onClick="moveToWrite"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/mainCircleTwo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/powder_circle"
        android:contentDescription="@string/main_circle_two"
        android:onClick="moveToRead"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/mainCircleOne"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="520dp"
        android:layout_height="105dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:fontFamily="monospace"
        android:text="YOUR LIBRARY"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--android:src="@drawable/powder_circle"-->

</android.support.constraint.ConstraintLayout>




